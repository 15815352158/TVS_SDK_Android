<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/template_head_bar"
        android:id="@+id/head_bar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/grid_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/head_bar"
        android:layout_marginLeft="75dp"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        android:overScrollMode="never"
        android:splitMotionEvents="false"
        />

    <TextView
        android:id="@+id/grid_guide_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/semantic_margin_left"
        android:layout_marginBottom="@dimen/launcher_padding_bottom"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/index_text_second_size"
        android:textColor="#ff000000"
        android:alpha="0.5"/>

    <include
        layout="@layout/template_foot_bar"
        android:id="@+id/foot_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>


</RelativeLayout>